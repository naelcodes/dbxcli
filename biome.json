{
	"$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious":{
				"noControlCharactersInRegex":"off"
			},
			"style":{
				"noParameterAssign":"off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 150,
		"ignore": ["node_modules","dist"]
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "single",
			"trailingCommas": "all",
			"bracketSpacing": false,
			"arrowParentheses": "always",
			"indentWidth": 2,
			"lineWidth": 150
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	}
}
