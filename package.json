{
  "name": "dbxcli",
  "version": "0.0.0",
  "description": "CLI tool for scaffolding Directus bundle extensions with utilities to enhance developer experience.",
  "keywords": [
    "dxcli",
    "directus"
  ],
  "main": "./dist/bin/dbxcli.js",
  "bin": {
    "dbxcli": "./dist/bin/dbxcli.js"
  },
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "templates"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/naelcodes/dxcli.git"
  },
  "scripts": {
    "lint": "pnpm biome lint --write src",
    "format": "pnpm biome format --write src",
    "dev": "tsc && (concurrently \"tsc -w\" \"tsc-alias -w\")",
    "clean": "rm -r dist/**",
    "build": "tsc && tsc-alias",
    "clean:build": "pnpm clean && pnpm build"
  },
  "author": "Nana Emmanuel",
  "license": "MIT",
  "engines": {
    "node": ">=22",
    "pnpm": "9"
  },
  "packageManager": "pnpm@9.12.1",
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@tsconfig/node22": "^22.0.0",
    "@types/node": "^22.7.5",
    "concurrently": "^9.0.1",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@directus/extensions": "^2.0.2",
    "@directus/extensions-sdk": "^12.1.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "execa": "^9.4.0",
    "fs-extra": "^11.2.0",
    "ora": "^8.1.0",
    "pkg-types": "^1.2.1"
  }
}